<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WarasApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/thirdBlueDark</item>
        <item name="colorPrimaryVariant">@color/primaryBlueDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryBlueLight</item>
        <item name="colorSecondaryVariant">@color/thirdBlueLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="backgroundCard">
        <item name="android:backgroundTint">@color/darkGrey</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="backgroundArticleCard">
        <item name="android:backgroundTint">@color/darkGrey</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="textSecondaryColor">
        <item name="android:textColor">@color/grey</item>
        <item name="android:tint">@color/grey</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:tint">@color/lightGrey</item>
    </style>

    <style name="strokeColor">
        <item name="strokeColor">@color/black</item>
    </style>
</resources>
